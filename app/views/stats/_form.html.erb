<%= form_for(stat) do |f| %>
  <% if stat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stat.errors.count, "error") %> prohibited this stat from being saved:</h2>

      <ul>
      <% stat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <th>Ganador</th>
        <th>Mas Puntos</th>
        <th>Mas Asistencias</th>
        <th>Mas Rebotes</th>
      </thead>
      <tbody>
        <td>
          <%= f.select(:winner_id, [[stat.team_a.name, stat.team_a.id], [stat.team_b.name, stat.team_b.id]], {}, {class: "form-control"}) %>
        </td>
        <td>
          <%= f.select(:most_points_id, stat.players_options, {}, {class: "form-control"}) %>
        </td>
        <td>
          <%= f.select(:most_assists_id, stat.players_options, {}, {class: "form-control"}) %>
        </td>
        <td>
          <%= f.select(:most_rebounds_id, stat.players_options, {}, {class: "form-control"}) %>
        </td>
        <td>
          <%= f.submit %>
        </td>
      </tbody>
    </table>
  </div>
<% end %>
